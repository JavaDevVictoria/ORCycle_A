<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".UserInfo$DummySectionFragment" >

            <TextView
                android:id="@+id/labelTripQuestionsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Tell us about this trip"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/labelTripFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/labelTripQuestionsHeader"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="How often do you ride this route?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerTripFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/labelTripFrequency"
                android:entries="@array/tripFrequencyArray" />

            <TextView
                android:id="@+id/tvTripPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerTripFrequency"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="What is the main trip purpose?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerTripPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/tvTripPurpose"
                android:entries="@array/tripPurposeArray" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerTripPurpose"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="I chose this route because..."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <edu.pdx.cecs.orcycle.MultiSelectionSpinner
                android:id="@+id/spinnerRouteChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerRouteChoice"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="In terms of comfort, this route isâ€¦"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerTripComfort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/textView6"
                android:entries="@array/tripComfortArray" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerTripComfort"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="How safe/comfortable was this ride?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerRouteSafety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/textView11"
                android:entries="@array/tripRouteSafetyArray" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerRouteSafety"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="Who accompanied you on this ride?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <edu.pdx.cecs.orcycle.MultiSelectionSpinner
                android:id="@+id/spinnerParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/textView12" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/spinnerParticipants"
                android:layout_marginTop="15dp"
                android:background="@color/pressed_color"
                android:text="What bike accessories did you use?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <edu.pdx.cecs.orcycle.MultiSelectionSpinner
                android:id="@+id/spinnerBikeAccessory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/labelTripQuestionsHeader"
                android:layout_below="@id/textView8" />

	</RelativeLayout>

</ScrollView>