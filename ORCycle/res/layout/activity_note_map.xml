<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordTrip$DummySectionFragment" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4sp"
        android:paddingRight="6sp"
        android:paddingTop="4sp" >

        <TextView
            android:id="@+id/TextViewMapNoteFancyStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp"
            android:text="September 27, 2014 11:02 PM"
            android:textSize="15sp" >
        </TextView>
        
        <TextView
            android:id="@+id/TextViewMapNoteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2sp"
            android:layout_below="@id/TextViewMapNoteFancyStart"
            android:text="Water fountains"
            android:textSize="18sp"
            android:textStyle="bold" >
        </TextView>

	    <TextView
	        android:id="@+id/TextViewMapNoteDetails"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="7sp"
	        android:layout_marginRight="7sp"
            android:layout_below="@id/TextViewMapNoteType"
	        android:paddingBottom="8sp" >
	    </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/noteMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:contentDescription="noteImage"
            android:scaleType="centerCrop" />
        
    </RelativeLayout>

</LinearLayout>