<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NoteQuestionsScrollView"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".UserInfo$DummySectionFragment" >

        <TextView
            android:id="@+id/tvNoteQuestionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/psu_green"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/nqaHeaderTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_white" />

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
            android:layout_below="@id/tvNoteQuestionsHeader"
		    android:background="#474334"
		    android:orientation="vertical" >

	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="1dp"
	            android:background="#fcfcfc"
	            android:orientation="vertical"
	            android:paddingBottom="4dp"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingTop="12dp"
	            tools:context=".UserInfo$DummySectionFragment" >
		    		    
			    <TextView
	                android:id="@+id/tvSeverityOfProblem"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:text="@string/nqaSeverityOfProblemTitle"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="#A33F1F" />

	            <Spinner
	                android:id="@+id/spnSeverityOfProblem"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/tvSeverityOfProblem"
	                android:layout_below="@id/tvSeverityOfProblem"
	                android:layout_marginBottom="6dp"
	                android:entries="@array/nqaSeverityOfProblem"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        	</RelativeLayout>
            
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="1dp"
	            android:background="#fcfcfc"
	            android:orientation="vertical"
	            android:paddingBottom="4dp"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingTop="12dp"
	            tools:context=".UserInfo$DummySectionFragment" >
	            
		        <TextView
	                android:id="@+id/tvIssueType"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:text="@string/nqaIssueTypeTitle"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="#A33F1F" />
	
	            <edu.pdx.cecs.orcycle.MultiSelectionSpinner
	                android:id="@+id/spnIssueType"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/tvIssueType"
	                android:layout_below="@id/tvIssueType"
	                android:layout_marginBottom="6dp"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
	            
	       	</RelativeLayout>
           	
   	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="1dp"
	            android:background="#fcfcfc"
	            android:orientation="vertical"
	            android:paddingBottom="4dp"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingTop="12dp"
	            tools:context=".UserInfo$DummySectionFragment" >
	            
		        <TextView
	                android:id="@+id/tvConflictType"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:text="@string/nqaConflictTypeTitle"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="#A33F1F" />
	
	            <edu.pdx.cecs.orcycle.MultiSelectionSpinner
	                android:id="@+id/spnConflictType"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@id/tvConflictType"
	                android:layout_below="@id/tvConflictType"
	                android:layout_marginBottom="6dp"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        	</RelativeLayout>
	            
	            
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="1dp"
	            android:background="#fcfcfc"
	            android:orientation="vertical"
	            android:paddingBottom="4dp"
	            android:paddingLeft="@dimen/activity_horizontal_margin"
	            android:paddingRight="@dimen/activity_horizontal_margin"
	            android:paddingTop="12dp"
	            tools:context=".UserInfo$DummySectionFragment" >
		        <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:layout_marginTop="0dp"
	                android:text="@string/anq_requiredEntries"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="#A33F1F" />
        	</RelativeLayout>
        	
	    </LinearLayout>
	    
    </RelativeLayout>
		
</ScrollView>